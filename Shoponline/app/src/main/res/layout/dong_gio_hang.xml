<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:weightSum="10"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_margin="5dp"
        android:layout_weight="3"
        android:layout_width="0dp"
        android:layout_height="wrap_content">
        <ImageView
            android:adjustViewBounds="true"
            android:id="@+id/imggiohang"
            android:layout_width="match_parent"
            android:layout_height="100dp">

        </ImageView>


    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_margin="5dp"
        android:layout_weight="7"
        android:layout_width="0dp"
        android:layout_height="wrap_content">
        <TextView
            android:text="Tên món hàng"
            android:textColor="#10100f"
            android:id="@+id/txttengiohang"
            android:textSize="25sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>
        <TextView
            android:layout_marginTop="3dp"
            android:text="giá món hàng"
            android:textColor="#FF2200"
            android:textSize="15sp"
            android:id="@+id/txtgiagiohang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>
        <LinearLayout
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:focusable="false"
                android:text="-"
                android:id="@+id/btngiam"
                android:textSize="30sp"
                android:layout_marginTop="5dp"
                android:layout_width="50dp"
                android:layout_height="wrap_content">

            </Button>
            <Button
                android:background="#ffda"
                android:focusable="false"
                android:text="1"
                android:id="@+id/btnvalues"
                android:textSize="30sp"
                android:layout_marginTop="5dp"
                android:layout_width="70dp"
                android:layout_height="wrap_content">

            </Button>

            <Button
                android:focusable="false"
                android:text="+"
                android:id="@+id/btntang"
                android:textSize="30sp"
                android:layout_marginTop="5dp"
                android:layout_width="50dp"
                android:layout_height="wrap_content">

            </Button>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>