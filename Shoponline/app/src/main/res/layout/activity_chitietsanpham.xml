<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.Chitietsanpham">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarChitietsanpham"
        app:title="Chi tiết sản phẩm"
        app:titleTextColor="#FDFDFF"
        android:background="#3F51B5"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">


    </androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imgchitietsanpham"
            android:src="@mipmap/ic_launcher"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_margin="10dp">

        </ImageView>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/txttenchitietsanpham"
                android:text="Tên sản phẩm"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_margin="10dp"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
            <TextView
                android:id="@+id/txtgiachitietsanpham"
                android:text="giá sản phẩm"
                android:textColor="#f20"
                android:layout_margin="10dp"
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
            <Spinner
                android:layout_margin="3dp"
                android:padding="15dp"
                android:background="@drawable/spiner"
                android:layout_gravity="center"
                android:id="@+id/spiner"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </Spinner>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/btndatmua"
            android:textColor="#2196F3"
            android:textSize="15sp"
            android:text="Thêm giỏ hàng"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </Button>
        <TextView
            android:layout_marginTop="5dp"
            android:textColor="#3F51B5"
            android:textSize="30sp"
            android:text="Mô tả sản phẩm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="2dp"
                android:paddingBottom="10dp"
                android:layout_marginTop="5dp"
                android:textSize="20sp"
                android:id="@+id/txtmotachitietsanpham"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>

        </ScrollView>

    </LinearLayout>

</LinearLayout>